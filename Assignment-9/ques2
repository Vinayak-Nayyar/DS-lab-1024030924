#include <iostream>
using namespace std;

class PriorityQueue {
    int arr[100];
    int size;

public:
    PriorityQueue() {
        size = 0;
    }

    void push(int x) {
        arr[size] = x;
        int i = size;
        size++;

        while (i > 0 && arr[(i - 1) / 2] < arr[i]) {
            swap(arr[i], arr[(i - 1) / 2]);
            i = (i - 1) / 2;
        }
    }

    int top() {
        if (size == 0) return -1;
        return arr[0];
    }

    void pop() {
        if (size == 0) return;

        arr[0] = arr[size - 1];
        size--;

        heapify(0);
    }

    void heapify(int i) {
        int largest = i;
        int left = 2*i + 1;
        int right = 2*i + 2;

        if (left < size && arr[left] > arr[largest]) largest = left;
        if (right < size && arr[right] > arr[largest]) largest = right;

        if (largest != i) {
            swap(arr[i], arr[largest]);
            heapify(largest);
        }
    }

    bool empty() {
        return size == 0;
    }
};

int main() {
    PriorityQueue pq;

    pq.push(30);
    pq.push(10);
    pq.push(50);
    pq.push(40);

    cout << "Top: " << pq.top() << endl;
    pq.pop();

    cout << "Top after pop: " << pq.top() << endl;

    return 0;
}
